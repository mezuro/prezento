<%= form_for(@reading_group, :html => { role: 'form' }) do |f| %>
  <%= render :partial => 'shared/form_errors', :locals => {:object => @reading_group} %>

<div class="row margin-left-none">
  <div class="form-table col-md-9">

    <div class="form-row">
      <div class="field-container" data-toggle="tooltip" data-placement="left" title="Input reading group name">
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, :required => true, class: 'text-field form-control' %>
      </div>
    </div>

    <div class="field-container" data-toggle="tooltip" data-placement="left" title="Input reading group description">
      <div class="field-container">
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_area :description, class: 'text-area form-control' %>
      </div>
    </div>
  </div>
</div>

<div class="row margin-left-none" style="margin-top: 20px">
  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Back', reading_groups_path, class: 'btn btn-default' %>
</div>
<% end %>
