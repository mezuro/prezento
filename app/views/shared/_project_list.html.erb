<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= t('name') %></th>
      <th><%= t('description') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td data-toggle="tooltip" data-placement="left" title="Show this project overview"><%= link_to t('show'), project_path(project.id), class: 'btn btn-info' %></td>
        <td>
          <% if project_owner? project.id %>
            <td data-toggle="tooltip" data-placement="left" title="Edit this project"><%= link_to t('edit'), edit_project_path(project.id), class: 'btn btn-info' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>