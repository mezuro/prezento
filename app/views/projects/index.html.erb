<div class="page-header">
  <h1>Projects</h1>
</div>

<% if user_signed_in? %>
  <p data-toggle="tooltip" data-placement="left" title="Create a new project">
    <%= link_to 'New Project', new_project_path, class: 'btn  btn-primary' %>
  </p>
<%else%>
  <p class="alert alert-warning alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    You must be logged in to create new Projects.
  </p>
<% end %>

<%= render partial: 'shared/project_list', locals: {projects: @projects} %>