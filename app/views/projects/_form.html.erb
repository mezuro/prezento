<%= form_for(@project, :html => { role: 'form' }) do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:object => @project} %>

<div class="row margin-left-none">
  <div class="form-table span9">
    <div class="form-row">
      <div class="field-container" data-toggle="tooltip" data-placement="left" title="Input project name" >
        <%= f.label :name, class: 'control-label' %><br>
        <%= f.text_field :name, class: 'text-field ' %>
      </div>
    </div>

    <div class="form-row">
      <div class="field-container" data-toggle="tooltip" data-placement="left" title="Input project description" >
        <%= f.label :description, class: 'control-label' %><br>
        <%= f.text_area :description, class: 'text-area' %>
      </div>
    </div>
  </div>
</div>
<div class="row margin-left-none" style="margin-top: 20px">
  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Back', projects_path, class: 'btn btn-default' %>
</div>
<% end %>
